{
  "name": "@droplt/server",
  "version": "1.0.0",
  "homepage": "https://github.com/droplt/droplt-server#readme",
  "repository": {
    "type": "https",
    "url": "https://github.com/droplt/droplt-server.git"
  },
  "license": "MIT",
  "author": "Fran√ßois Lefebvre <francois.lfe@gmail.com>",
  "scripts": {
    "build": "node ace build --production",
    "db:migrate": "node ace migration:run",
    "db:reset": "run-s db:rollback db:migrate",
    "db:rollback": "node ace migration:rollback",
    "predev": "run-s postinstall db:reset",
    "dev": "node ace serve --watch",
    "format": "prettier --write .",
    "postinstall": "run-s setup:env setup:tmp",
    "lint": "eslint . --ext=.ts",
    "setup:env": "cpy .env.example .env --rename --no-overwrite",
    "setup:tmp": "make-dir tmp",
    "start": "node server.js",
    "test": "node -r @adonisjs/assembler/build/register tests.ts",
    "test:watch": "nodemon -x node -r @adonisjs/assembler/build/register tests.ts"
  },
  "dependencies": {
    "@adonisjs/auth": "^5.1.1",
    "@adonisjs/core": "^5.0.4-preview-rc",
    "@adonisjs/lucid": "^10.0.0",
    "@adonisjs/repl": "^1.0.0",
    "luxon": "^1.26.0",
    "mysql": "^2.18.1",
    "pg": "^8.5.1",
    "proxy-addr": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^3.0.0",
    "@commitlint/cli": "^12.0.1",
    "@droplt/commitlint-config": "^1.1.0",
    "@types/supertest": "^2.0.10",
    "adonis-preset-ts": "^2.0.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-adonis": "^1.2.1",
    "eslint-plugin-prettier": "^3.3.1",
    "execa": "^5.0.0",
    "get-port": "^5.1.1",
    "husky": "^4.3.8",
    "japa": "^3.1.1",
    "lint-staged": "^10.5.4",
    "make-dir-cli": "^2.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^4.5.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "sort-package-json": "^1.49.0",
    "supertest": "^6.1.3",
    "typescript": "^4.2.2",
    "youch": "^2.1.1",
    "youch-terminal": "^1.0.1"
  }
}
